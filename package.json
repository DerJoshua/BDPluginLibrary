{
  "name": "zerespluginlibrary",
  "version": "2.0.5",
  "description": "Zere's library for BetterDiscord plugins.",
  "repository": {
    "type": "git",
    "url": "https://github.com/rauenzi/BDPluginLibrary"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.16.9",
    "foodoc": "github:rauenzi/foodoc",
    "jsdoc": "^3.6.10",
    "mocha": "^9.1.4",
    "raw-loader": "^4.0.2",
    "typescript": "^4.8.3",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  },
  "scripts": {
    "test": "mocha --require @babel/register --recursive \"./tests/*.js\"",
    "build": "node ./scripts/build.js development 0PluginLibrary",
    "build-prod": "node ./scripts/build.js production 0PluginLibrary",
    "build-docs": "jsdoc -r src -c jsdoc.config.json",
    "webpack": "webpack",
    "lint": "eslint --ext .js ./src/ --ignore-pattern '*.json'",
    "types": "tsc",
    "zpl": "node %npm_package_bin_zpl%"
  },
  "author": "Zerebos",
  "license": "MIT",
  "eslintIgnore": [
    "scripts/template*"
  ],
  "zplConfig": {
    "pluginsFolder": "./examples",
    "releaseFolder": "./release",
    "copyToBD": true,
    "addInstallScript": true
  },
  "bin": {
    "zpl": "bin/zpl.js"
  },
  "files": [
    "bin/",
    "types/"
  ],
  "types": "types/types.d.ts"
}
